<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jack_ross.plusminushealthtracker.AddActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add an Activity"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="-3"
            android:id="@+id/radioButtonM3"
            android:checked="false" />

        <RadioButton
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="-2"
            android:id="@+id/radioButtonM2"
            android:checked="false" />

        <RadioButton
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="-1"
            android:id="@+id/radioButtonM1"
            android:checked="false" />
        <RadioButton
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:id="@+id/radioButtonP1"
            android:checked="false" />
        <RadioButton
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="+2"
            android:id="@+id/radioButtonP2"
            android:checked="false" />
        <RadioButton
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="+3"
            android:id="@+id/radioButtonP3"
            android:checked="false" />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/activityDescription"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="26dp"
        android:hint="Please enter description of activity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Activity"
        android:id="@+id/saveActivity"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="saveActivity"
    />


</RelativeLayout>
